{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "dist",
		"target": "ES2019",
		"lib": ["ES2019", "DOM"],
		"isolatedModules": false,
		"noEmit": false,
		"paths": {
			// Fix for next-auth's exports
			"next-auth/*": ["node_modules/next-auth/*"]
		}
	},
	"include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
}
